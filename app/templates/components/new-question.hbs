{{#if addNewQuestion}}
  <h1>Fill in the form below to submit a new question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="qst">Question</label>
        {{input value=qst id="qst"}}
      </div>

      <div class="form-group">
        <label for="notes">Notes</label>
        {{input value=notes id="notes"}}
      </div>

      <div class="form-group">
        <label for="image">Image</label>
        {{input value=image id="image"}}
      </div>

          <button class="btn"{{action 'saveQuestion1'}}>Save Question</button>
    </form>
  </div>
{{else}}
  <button class="btn"{{action 'showQuestionForm'}}>New Question</button>
{{/if}}
