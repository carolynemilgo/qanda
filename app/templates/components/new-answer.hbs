{{#if addNewAnswer}}
<h4>Submit an answer</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content"}}
      </div>

      <button {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn"{{action 'showAnswerForm'}}>New Answer</button>
{{/if}}
