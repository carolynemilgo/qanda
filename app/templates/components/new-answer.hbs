{{#if addNewAnswer}}
  <h4>Submit an answer</h4>

  <div class="col-md-8">
    <form>
      <div class="form-group">
        <label for="author">Author</label> {{input value=author id="author" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="content">Content</label> {{input value=content id="content" class="form-control"}}
      </div>

      <button class="btn-success" {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn-success btn-lg" {{action 'showAnswerForm'}}>Submit New Answer</button>
{{/if}}
